grid-width = 100%
grid-min-width = 320px
base-font-size = 2.5em
base-line-height = 3em
base-color = #111111
vendors = webkit moz o official

@import "../../node_modules/fluidity/lib/fluidity"

$color-fade = #C0C0C0


body
  font-family: 'Amatic SC', cursive;
	

#container
  grid(90%, 400px)
  padding-bottom:0%
  margin-bottom:0%
  line-height:80%
	
.welcome
  width:80%;
  height:80%;
  margin-left:10%;
	
.welcome:hover
  box-shadow:0px 0px 50px gray
  -webkit-transition: box-shadow .50s ease
  -moz-transition: box-shadow .50s ease
  -ms-transition: box-shadow .50s ease
  -o-transition: box-shadow .50s ease
  transition: box-shadow .50s ease
	
h1
  margin-top:0%
  margin-bottom:0%
  margin-left:0%
  margin-right:0%
  line-height:80%

h2
  margin-left:0%
  margin-right:0%
  margin-top:0%
  margin-bottom:0%
  line-height:80%
  font-size: 90%

h3 
  margin-left:0%
  margin-right:0%
  margin-top:0%
  margin-bottom:0%
  font-size: 70%
	
h4
  line-height:80%
  font-size: 50%
	
.centered 
  text-align:center
	
a
  text-decoration: none
  color: black

a:hover
  color:$color-fade
  -webkit-transition: color .30s ease
  -moz-transition: color .30s ease
  -ms-transition: color .30s ease
  -o-transition: color .30s ease
  transition: color .30s ease
	
foot:hover
  color:#C0C0C0
  -webkit-transition: color .30s ease
  -moz-transition: color .30s ease
  -ms-transition: color .30s ease
  -o-transition: color .30s ease
  transition: color .30s ease


.hoverBorder:hover
  box-shadow:0px 0px 50px gray
  -webkit-transition: box-shadow .50s ease
  -moz-transition: box-shadow .50s ease
  -ms-transition: box-shadow .50s ease
  -o-transition: box-shadow .50s ease
  transition: box-shadow .50s ease
	
footer
  bottom:0
	
html, body
  height: 100%;

#wrap
  min-height: 100%;

#main 
  overflow:auto;

#footer
  margin-top: 1%
  position: relative
  clear:both;
  width:100%;
	
